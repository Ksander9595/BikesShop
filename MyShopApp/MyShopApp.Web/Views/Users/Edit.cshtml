@model MyShopApp.Web.Models.EditUserViewModel
@{
    ViewBag.Title = "Edit User";
}
<form asp-action="Edit" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth" class="control-label">Date of birth</label>
        <input type="number" asp-for="DateOfBirth" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-dark" />
    </div>
</form>