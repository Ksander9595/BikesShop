@model IEnumerable<MyShopApp.BLL.DTO.UserDTO>
@using Microsoft.AspNetCore.Identity

@{
    ViewBag.Title = "Users List";
}
<h4>Users List</h4>
<a asp-action="Create" asp-controller="Users" class="btn btn-dark my-2 my-sm-0">Add User</a>
<a asp-action="RolesList" asp-controller="Roles" class="btn btn-dark my-2 my-sm-0">Add Roles</a>

<table class="table table-striped table-dark">
    <tr><th>Email</th><th>Year</th><th></th></tr>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.Email</td>
            <td>@u.Year</td>
            
            
            <td>
                <form asp-action="Delete" asp-controller="Users" asp-route-id="@u.Id" method="post">
                    <a class="btn btn-sm btn-dark" asp-action="Edit" asp-controller="Users" asp-route-id="@u.Id">Edit</a> 
                    <a class="btn btn-sm btn-dark" asp-action="ChangePassword" asp-controller="Users" asp-route-id="@u.Id">Change Password</a>
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    <a class="btn btn-sm btn-dark" asp-action="Edit" asp-controller="Roles" asp-route-userid="@u.Id">Access rights</a>
                </form>
            </td>
        </tr>
    }
</table>

