@model MyShopApp.Web.Models.CartViewModel

@{
    ViewBag.Title = "User Page";
}
<a class="text-white">@User.Identity.Name</a>
@if(Model.Id != 0)
{
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>@Model.Date</th>
                <th>@Model.Sum</th>
                <th>
                    <form asp-action="Checkout" asp-controller="Cart" asp-route-id="@Model.Id" method="get">
                        <input type="hidden" asp-for="@Model.Id" />
                        <button type="submit" class="btn btn-success btn-sm pull-right">Checkout</button>
                    </form>
                </th>
                <th>
                    <form asp-action="Delete" asp-controller="Home" asp-route-id="" method="post">
                        <a class="btn btn-sm btn-dark" asp-action="Edit" asp-controller="Home" asp-route-id="">Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </th>
            </tr>
            <tr>
                <td colspan="4">
                    <table class="table mb-0 bg-dark ">
                        <thead>
                            <tr>
                                <th>Motorcycle Name</th>
                                <th>Motorcycle Model</th>
                                <th>Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var m in Model.cartLineViewModels)
                            {
                                <tr>
                                    <td>@m.MotorcycleName</td>
                                    <td>@m.MotorcycleModel</td>
                                    <td>@m.Quantity</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <a class="text-white">
        <h3>Cart:</h3>
    </a>
    <p class="text-white">Your cart is empty, try adding the product again.</p>
}

<form method="post" asp-controller="Account" asp-action="Logout">
    <input type="submit" class="btn btn-dark my-2 my-sm-0" value="Exit" />
</form>