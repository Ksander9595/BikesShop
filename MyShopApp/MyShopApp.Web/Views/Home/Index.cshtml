@model IEnumerable<MyShopApp.Web.Models.MotocycleViewModel>

@{
    ViewBag.Title = "Index";
}

@foreach(var item in Model)
{
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                @item.Name @item.Model
                <span class="badge badge-pill badge-primary" style="float:right">
                    <small>@item.Price.ToString("c")</small>
                </span>
            </h4>
        </div>
        <form id="@item.Id" asp-action="MakeOrder"
              asp-controller="Home" method="post">
            <input type="hidden" asp-for="@item.Id" />
            <span class="card-text p-1">
                @item.Description
                <button type="submit"
                        class="btn btn-success btn-sm pull-right" style="float:right">
                    Add To Cart
                </button>
            </span>
        </form>
    </div>
}