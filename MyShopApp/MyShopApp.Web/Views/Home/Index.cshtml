@model IEnumerable<MyShopApp.Web.Models.MotorcycleViewModel>

@{
    ViewBag.Title = "Motorcycle List";
}

@foreach(var item in Model)
{
    <div class="card text-white bg-dark m-1 p-1">
        <div class="bg-dark p-1">
            <div>
                <h5 class="font-weight-bold">
                    @item.Name @item.Model <small class="font-weight-light"><font size=3>Year: @item.Year Hp: @item.Hp Capacity: @item.Capacity Mileage: @item.Mileage</font></small>
                    <span class="badge badge-pill bg-secondary" style="float:right">
                        <small>@item.Price.ToString("c")</small>
                    </span>
                </h5>
            </div>
        </div>
        <form asp-action="MakeOrder" asp-controller="Home" asp-route-id="@item.Id" method="get">
            <input type="hidden" asp-for="@item.Id" />
            <span class="card-text p-1">
                @item.Description
                <button type="submit"
                        class="btn btn-success btn-sm pull-right" style="float:right">
                    Add To Cart
                </button>
            </span>
        </form>
    </div>
}