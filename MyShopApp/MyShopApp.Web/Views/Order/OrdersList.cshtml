@model IEnumerable<MyShopApp.Web.Models.OrderViewModel>

@{
    ViewBag.Title = "Orders List";
}

<table class="table table-striped table-dark">
    <tr><th>Date</th><th>User Name</th><th>Phone Number</th><th>Address</th><th>Zip</th><th>Motorcycle Name</th><th>Model</th><th>Price</th><th></th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Date</td>
            <td>@item.UserName</td>            
            <td>@item.PhoneNumber</td>
            <td>@item.Address</td>
            <td>@item.Zip</td>
            <td>@item.MotorcycleName</td>
            <td>@item.MotorcycleModel</td>
            <td>@item.Sum</td>


            <td>
                <form asp-action="Delete" asp-controller="Home" asp-route-id="" method="post">
                    <a class="btn btn-sm btn-dark" asp-action="Edit" asp-controller="Home" asp-route-id="">Edit</a>                   
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>                    
                </form>
            </td>
        </tr>
    }
</table>
