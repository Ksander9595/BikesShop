@model IEnumerable<MyShopApp.Web.Models.OrderViewModel>

@{
    ViewBag.Title = "Orders List";
}

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Date</th>
            <th scope="col">User Name</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Address</th>
            <th scope="col">Zip</th>
            <th scope="col">Price</th>
            <th></th>
        </tr>
    </thead>
<tbody>
    @foreach(var item in Model)
    {
        <tr>
            <th>@item.Date</th>
            <th>@item.UserName</th>
            <th>@item.PhoneNumber</th>
            <th>@item.Address</th>
            <th>@item.Zip</th>
            <th>@item.Sum</th>
            <th>
                <form asp-action="Delete" asp-controller="Home" asp-route-id="" method="post">
                    <a class="btn btn-sm btn-dark" asp-action="Edit" asp-controller="Home" asp-route-id="">Edit</a>
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </th>
        </tr>
        <tr>
            <td colspan="4">
                <table class="table mb-0 bg-dark ">
                    <thead>
                        <tr>
                            <th>Motorcycle Name</th>
                            <th>Motorcycle Model</th>
                            <th>Quantity</th>                              
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var m in item.cartViewModels)
                        {
                        <tr>
                            <td>@m.MotorcycleName</td>
                            <td>@m.MotorcycleModel</td>
                            <td>@m.Quantity</td>                               
                        </tr>
                        }
                    </tbody>
                </table>
            </td>
        </tr>
    }        
</tbody>
</table>
