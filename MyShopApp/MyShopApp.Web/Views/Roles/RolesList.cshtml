@model IEnumerable<MyShopApp.BLL.DTO.RoleDTO>

<h4>Roles List</h4>
<table class="table table-dark">
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.RoleName</td>
            <td>
                <form asp-action="Delete" asp-controller="Roles" asp-route-id="@role.RoleId" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a asp-action="Create" asp-controller="Roles" class="btn btn-dark my-2 my-sm-0">Add Role</a>
<a asp-action="UserList" asp-controller="Users" class="btn btn-dark my-2 my-sm-0">Users List</a>